FROM python:3.11-slim-bookworm

RUN apt update && apt --no-install-recommends install -y curl build-essential gcc libpq-dev

RUN curl -sS --proto "=https" https://install.python-poetry.org | \
    POETRY_HOME=/opt/poetry POETRY_VERSION=1.5.1 python && \
    cd /usr/local/bin && \
    ln -s /opt/poetry/bin/poetry && \
    poetry config virtualenvs.create false

COPY ./pyproject.toml ./poetry.lock* ./README* ./LICENSE* ./Makefile /app/
WORKDIR /app
RUN poetry install --no-root

VOLUME /app/jobbergate_api
VOLUME /app/dev_tools
VOLUME /app/alembic

ENTRYPOINT /app/dev_tools/entrypoint.sh
#CMD ["uvicorn", "jobbergate_api.main:app", "--host", "0.0.0.0", "--port", "80"]
